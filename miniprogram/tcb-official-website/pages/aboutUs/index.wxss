/* pages/aboutUs/index.wxss */
.about_us {
  width: 100%;
  position: relative;
}
.about_us_title {
  left: 0;
  right: 0;
  position: absolute;
  top: 110rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  line-height: 52rpx;
}
.about_us_background {
  width: 100%;
}
.about_desc {
  position: relative;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: -100rpx 20rpx 0;
}
.about_desc_title {
  font-size: 40rpx;
  font-weight: 400;
  line-height: 52rpx;
}
.about_desc_border {
  width: 48rpx;
  height: 6rpx;
  background: #0F62FE;
  margin: 16rpx 0 32rpx;
}

.about_desc_content{
  font-size: 28rpx;
  line-height: 24px;
  font-weight: 400;
}

.about_title {
  margin: 80rpx 60rpx 0;
}

.about_title text {
  font-size: 40rpx;
  line-height: 52rpx;
  font-weight: 400;
}
.about_list {
  margin: 48rpx 60rpx 0;
}

.about_icon {
  float: left;
  width: 48rpx;
  height: 48rpx;
  padding: 16rpx;
  background: #DDE1E6;
  border-radius: 10rpx;
  margin-right: 24rpx;
}
.about_icon image {
  width: 48rpx;
  height: 48rpx;
}

.about_cont {
  float: left;
}

.about_cont_title {
  color: #878D96;
  font-size: 24rpx;
  line-height: 36rpx;
  font-weight: 400;
}
.about_cont_content {
  font-size: 28rpx;
  line-height: 44rpx;
}

.about_button  {
  float:right;
  width: 80rpx;
  height: 48rpx;
}
.about_button .about_button_img {
  height: 40rpx;
  margin: 0 auto;
  width: 40rpx;
}
.about_button image {
  width: 40rpx;
  height: 40rpx;
  
}
.about_button .about_button_title {
  display: block;
  text-align: center;
  font-size: 22rpx;
  line-height: 32rpx;
  color: #878D96;
}