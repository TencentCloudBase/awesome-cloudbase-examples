.news_item_border {
  width: 100%;
  height:2rpx;
  border-bottom: 1px solid #E7ECF2;
}
.news_item {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  padding-bottom: 20rpx;
}
.news_list_title {
  font-size: 28rpx;
  line-height: 44rpx;
  height: 88rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.news_time {
  font-size: 24rpx;
  line-height: 16rpx;
  color: #878D96;
}

.news_image image {
 width: 192rpx;
 height: 130rpx;
}