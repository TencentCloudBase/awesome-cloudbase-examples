/* 容器样式 */
.container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 200rpx; /* 为底部固定按钮留出空间 */
}

/* 课程主图区域 */
.hero-section {
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.course-main-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(transparent 50%, rgba(0, 0, 0, 0.3));
}

.free-badge {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  background: linear-gradient(135deg, #4CAF50, #45A049);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(76, 175, 80, 0.4);
}

/* 课程基本信息 */
.course-info-section {
  background: white;
  margin: -40rpx 30rpx 30rpx;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 2;
}

.course-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.course-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.course-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.rating-section {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-star {
  font-size: 24rpx;
}

.rating-score {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B9D;
}

.rating-count {
  font-size: 24rpx;
  color: #999;
}

.participants-count {
  font-size: 26rpx;
  color: #666;
}

.course-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  background: linear-gradient(135deg, #FF6B9D, #FF8FA3);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 公共章节样式 */
.schedule-section,
.instructor-section,
.description-section,
.outline-section,
.benefits-section,
.audience-section,
.notices-section {
  background: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 课程安排 */
.schedule-card {
  gap: 20rpx;
}

.schedule-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.schedule-item:last-child {
  margin-bottom: 0;
}

.schedule-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.schedule-info {
  flex: 1;
}

.schedule-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.schedule-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 导师介绍 */
.instructor-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.instructor-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f5f5f5;
}

.instructor-info {
  flex: 1;
}

.instructor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.instructor-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.instructor-stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

.contact-btn {
  background: linear-gradient(135deg, #FF6B9D, #FF8FA3);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
}

/* 课程描述 */
.description-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 课程大纲 */
.outline-list {
  gap: 24rpx;
}

.outline-item {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.outline-item:last-child {
  margin-bottom: 0;
}

.outline-number {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #FF6B9D, #FF8FA3);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.outline-content {
  flex: 1;
}

.outline-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.outline-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.outline-duration {
  font-size: 24rpx;
  color: #999;
}

/* 收获列表 */
.benefits-list,
.audience-list {
  gap: 16rpx;
}

.benefit-item,
.audience-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.benefit-item:last-child,
.audience-item:last-child {
  margin-bottom: 0;
}

.benefit-icon,
.audience-icon {
  font-size: 24rpx;
  margin-top: 2rpx;
  flex-shrink: 0;
}

.benefit-text,
.audience-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 注意事项 */
.notices-list {
  gap: 12rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.notice-item:last-child {
  margin-bottom: 0;
}

.notice-bullet {
  font-size: 24rpx;
  color: #FF6B9D;
  margin-top: 2rpx;
  flex-shrink: 0;
}

.notice-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部预约区域 */
.booking-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.participants-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.participants-fill {
  height: 100%;
  background: linear-gradient(135deg, #FF6B9D, #FF8FA3);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.booking-info {
  text-align: center;
  margin-bottom: 20rpx;
}

.participants-text {
  font-size: 26rpx;
  color: #666;
}

.booking-actions {
  display: flex;
  gap: 20rpx;
}

.book-btn,
.cancel-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.book-btn {
  background: linear-gradient(135deg, #FF6B9D, #FF8FA3);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 157, 0.4);
}

.book-btn:disabled {
  background: #ddd !important;
  color: #999 !important;
  box-shadow: none !important;
}

.book-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.5);
}

.cancel-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #ddd;
}

.cancel-btn:active {
  background: #e9ecef;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: #f8f9fa;
}

.loading-content {
  text-align: center;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-icon {
  font-size: 60rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: #f8f9fa;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.error-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.retry-button {
  margin-top: 30rpx;
  background: linear-gradient(135deg, #FF6B9D, #FF8FA3);
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .course-title {
    font-size: 36rpx;
  }
  
  .course-info-section {
    margin: -30rpx 20rpx 20rpx;
    padding: 30rpx 24rpx;
  }
  
  .schedule-section,
  .instructor-section,
  .description-section,
  .outline-section,
  .benefits-section,
  .audience-section,
  .notices-section {
    margin: 0 20rpx 20rpx;
    padding: 24rpx;
  }
  
  .instructor-card {
    flex-direction: column;
    text-align: center;
  }
  
  .booking-actions {
    flex-direction: column;
  }
} 