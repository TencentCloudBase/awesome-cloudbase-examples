.container {
  background-color: #0d0402;
  color: #e4dad7;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  padding: 48rpx 32rpx;
  background: linear-gradient(135deg, rgba(255, 87, 51, 0.1), rgba(255, 87, 51, 0.05));
  border-bottom: 1rpx solid rgba(182, 152, 145, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 87, 51, 0.3);
}

.user-details {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #e4dad7;
  display: block;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 28rpx;
  color: rgba(235, 213, 209, 0.62);
}

.login-section {
  text-align: center;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.login-btn {
  background-color: #ff5733;
  color: #000;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 菜单区域 */
.menu-section {
  margin-top: 32rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(182, 152, 145, 0.1);
  background-color: rgba(224, 191, 184, 0.05);
  margin-bottom: 2rpx;
}

.menu-item:active {
  background-color: rgba(224, 191, 184, 0.12);
}

.menu-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  font-size: 36rpx;
  width: 48rpx;
  text-align: center;
}

.menu-title {
  font-size: 32rpx;
  color: #e4dad7;
}

.menu-arrow {
  font-size: 36rpx;
  color: rgba(235, 213, 209, 0.4);
  font-weight: bold;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 48rpx 32rpx;
}

.version-text {
  font-size: 26rpx;
  color: rgba(235, 213, 209, 0.4);
} 