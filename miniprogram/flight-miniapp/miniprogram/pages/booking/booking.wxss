/* pages/booking/booking.wxss */
.container {
  background-color: #0d0402;
  color: #e4dad7;
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 页面头部 */
.header {
  background-color: #0d0402;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(182, 152, 145, 0.2);
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  background-color: rgba(182, 152, 145, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.back-btn:active {
  background-color: rgba(182, 152, 145, 0.4);
  transform: scale(0.9);
}

.back-icon {
  font-size: 36rpx;
  color: #e4dad7;
  font-weight: bold;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #e4dad7;
}

/* 通用section样式 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e4dad7;
  margin-bottom: 24rpx;
}

/* 航班信息 */
.flight-info-section {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(182, 152, 145, 0.2);
}

.flight-card {
  background-color: rgba(224, 191, 184, 0.12);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 16rpx;
}

.flight-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.airline-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #e4dad7;
}

.flight-number {
  font-size: 28rpx;
  color: #ff5733;
  background-color: rgba(255, 87, 51, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.flight-route {
  margin-bottom: 16rpx;
}

.route-text {
  font-size: 28rpx;
  color: #ff5733;
  font-weight: bold;
}

.flight-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.time-text {
  font-size: 28rpx;
  color: #e4dad7;
}

.duration-text {
  font-size: 24rpx;
  color: rgba(235, 213, 209, 0.62);
}

.flight-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.type-text, .class-text {
  font-size: 24rpx;
  color: rgba(235, 213, 209, 0.62);
}

.price-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff5733;
}

/* 乘客信息 */
.passengers-section {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(182, 152, 145, 0.2);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.add-passenger-btn {
  background-color: rgba(255, 87, 51, 0.1);
  color: #ff5733;
  border: 1rpx solid #ff5733;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.add-passenger-btn::after {
  border: none;
}

.add-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.passenger-card {
  background-color: rgba(224, 191, 184, 0.12);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(182, 152, 145, 0.15);
}

.passenger-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.passenger-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #e4dad7;
}

.remove-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(255, 87, 51, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.remove-btn:active {
  background-color: rgba(255, 87, 51, 0.2);
  transform: scale(0.9);
}

.remove-icon {
  font-size: 24rpx;
  color: #ff5733;
  font-weight: bold;
}

/* 表单组件 */
.form-group {
  margin-bottom: 36rpx;
  position: relative;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #e4dad7;
  margin-bottom: 20rpx;
  font-weight: 500;
  line-height: 1.2;
}

.form-input {
  width: 100%;
  background-color: rgba(182, 152, 145, 0.1);
  border: 1rpx solid rgba(182, 152, 145, 0.3);
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  font-size: 30rpx;
  color: #e4dad7;
  box-sizing: border-box;
  height: 92rpx;
  line-height: 36rpx;
}

.form-input::placeholder {
  color: rgba(235, 213, 209, 0.5);
  font-size: 30rpx;
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(182, 152, 145, 0.1);
  border: 1rpx solid rgba(182, 152, 145, 0.3);
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  font-size: 30rpx;
  color: #e4dad7;
  height: 92rpx;
  box-sizing: border-box;
  line-height: 36rpx;
}

.picker-arrow {
  color: rgba(235, 213, 209, 0.5);
  font-size: 24rpx;
}

/* 联系人信息 */
.contact-section {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(182, 152, 145, 0.2);
}

.contact-card {
  background-color: rgba(224, 191, 184, 0.12);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 16rpx;
  border: 1rpx solid rgba(182, 152, 145, 0.15);
}

/* 价格信息 */
.price-section {
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(182, 152, 145, 0.2);
}

.price-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.price-label {
  font-size: 32rpx;
  color: #e4dad7;
}

.total-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff5733;
}

.price-note {
  text-align: right;
}

.note-text {
  font-size: 24rpx;
  color: rgba(235, 213, 209, 0.5);
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #0d0402;
  padding: 32rpx;
  border-top: 1rpx solid rgba(182, 152, 145, 0.2);
}

.submit-btn {
  width: 100%;
  background-color: #ff5733;
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  background-color: rgba(255, 87, 51, 0.8);
  transform: scale(0.98);
}

.submit-btn.loading {
  background-color: rgba(255, 87, 51, 0.6);
}

.submit-btn[disabled] {
  background-color: rgba(255, 87, 51, 0.4);
  color: rgba(255, 255, 255, 0.6);
} 